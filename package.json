{
  "name": "@pluvial/zgl",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/pluvial/zgl"
  },
  "version": "0.0.2",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/zgl.js",
      "types": "./dist/zgl.d.ts"
    },
    "./dist/zgl.min.js": {
      "import": "./dist/zgl.min.js",
      "types": "./dist/zgl.d.ts"
    },
    "./dist/zgl.terser.js": {
      "import": "./dist/zgl.terser.js",
      "types": "./dist/zgl.d.ts"
    }
  },
  "files": [
    "dist",
    "package.json",
    "patches",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@eslint/js": "^8.53.0",
    "@sergeymakinen/vite-plugin-html-minimize": "^1.0.6",
    "@types/eslint": "^8.44.7",
    "@types/webxr": "^0.5.7",
    "eslint": "^8.53.0",
    "globals": "^13.23.0",
    "lil-gui": "^0.19.0",
    "terser": "^5.21.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-glsl": "^1.1.2",
    "vite-plugin-singlefile": "^0.13.5"
  },
  "pnpm": {
    "patchedDependencies": {
      "lil-gui@0.19.0": "patches/lil-gui@0.19.0.patch"
    }
  },
  "scripts": {
    "dev": "vite",
    "build:esm": "tsc && vite build",
    "build": "MINIFY=esbuild pnpm build:esm",
    "build:terser": "MINIFY=terser pnpm build:esm",
    "lib": "pnpm lib:esm && pnpm lib:min && pnpm lib:terser && pnpm lib:tsc",
    "lib:esm": "vite build -c vite.lib.config.js",
    "lib:min": "esbuild --minify --platform=neutral dist/zgl.js --outfile=dist/zgl.min.js",
    "lib:terser": "terser dist/zgl.js -c -m --mangle-props --module --comments false -o dist/zgl.terser.js",
    "lib:tsc": "tsc -p tsconfig.lib.json",
    "lint": "eslint .",
    "prepublishOnly": "pnpm lib",
    "preview": "vite preview"
  }
}
