{
  "name": "zgl",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build:esm": "tsc && vite build",
    "build": "MINIFY=esbuild pnpm build:esm",
    "build:terser": "MINIFY=terser pnpm build:esm",
    "lib:esm": "vite build -c vite.lib.config.js",
    "lib": "MINIFY=esbuild pnpm lib:esm",
    "minify:esbuild": "esbuild --bundle --minify --platform=neutral dist/zgl.js --outfile=dist/zgl.min.js",
    "minify:terser": "terser dist/zgl.js -c -m --mangle-props --module --comments false -o dist/zgl.min.js",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@sergeymakinen/vite-plugin-html-minimize": "^1.0.6",
    "@types/webxr": "^0.5.7",
    "lil-gui": "^0.19.0",
    "terser": "^5.21.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-glsl": "^1.1.2",
    "vite-plugin-singlefile": "^0.13.5"
  },
  "pnpm": {
    "patchedDependencies": {
      "lil-gui@0.19.0": "patches/lil-gui@0.19.0.patch"
    }
  }
}
